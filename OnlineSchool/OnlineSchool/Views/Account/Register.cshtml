@model OnlineSchool.Models.RegisterViewModel
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{

<link href="~/Content/Instructor/ionicons.min.css" rel="stylesheet" />

<link href="~/Content/bower_components/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet" />
<link href="~/Content/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<link href="~/Content/plugins/iCheck/all.css" rel="stylesheet" />


<link href="~/Content/bower_components/bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css" rel="stylesheet" />
<link href="~/Content/plugins/timepicker/bootstrap-timepicker.min.css" rel="stylesheet" />


<link href="~/Content/bower_components/select2/dist/css/select2.min.css" rel="stylesheet" />
<link href="~/Content/dist/css/skins/_all-skins.min.css" rel="stylesheet" />

<link href="~/Content/Instructor/AdminLTE.min.css" rel="stylesheet" />

}
<div class="register-box">
    <div class="register-box-body">
        <p class="login-box-msg">Register a new membership</p>
        @if(User.Identity.IsAuthenticated==true)
        {
            Response.Redirect("/Home/Index");
        }
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @placeholder = "Full name" })
                <i class="glyphicon glyphicon-user form-control-feedback"></i>
                @Html.ValidationMessageFor(m => m.FullName, null, new { @class = "text-danger" })
            </div>
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                <i class="glyphicon glyphicon-envelope form-control-feedback"></i>
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
            </div>
            <div class="form-group has-feedback">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                <i class="glyphicon glyphicon-lock form-control-feedback"></i>
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
            </div>
            <div class="form-group has-feedback">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                <i class="glyphicon glyphicon-log-in form-control-feedback"></i>
                @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="checkbox icheck">
                        @Html.RadioButtonFor(r => r.Gender, true) Male
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="checkbox icheck">
                        @Html.RadioButtonFor(r => r.Gender, false) Female
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.Gender, null, new { @class = "text-danger" })
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="checkbox icheck">
                        @Html.RadioButtonFor(r => r.IsInstructor, true) Instructor
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="checkbox icheck">
                        @Html.RadioButtonFor(r => r.IsInstructor, false) Student
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.IsInstructor, null, new { @class = "text-danger" })
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <input type="submit" value="Register" class="btn btn-primary btn-block btn-flat" />
                </div>
            </div>


        }


        <a href="../Account/login" class="text-center">I already have a membership</a>
    </div>
</div>
@section scripts{
<script src="~/Content/Instructor/Js/jquery.slimscroll.min.js"></script>
<script src="~/Content/Instructor/Js/fastclick.js"></script>

<script src="~/Content/Instructor/Js/adminlte.min.js"></script>
<script src="~/Content/Instructor/Js/demo.js"></script>

    <script src="~/Scripts/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
}
